@model E_Commerce_Cooperatives.Models.ViewModels.UserDetailsViewModel
@{
    ViewBag.Title = "Détails Utilisateur";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<div class="admin-page">
    <div class="admin-page-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="admin-page-title">Détails de l'utilisateur</h1>
                <p class="admin-page-subtitle">Informations complètes du profil</p>
            </div>
            <a href="@Url.Action("Utilisateurs", "Admin")" class="btn-back">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
                </svg>
                Retour à la liste
            </a>
        </div>
    </div>

    <div class="row">
        <!-- User Info Card -->
        <div class="col-md-8 mb-4">
            <div class="info-card">
                <div class="info-card-header">
                    <h3>Informations personnelles</h3>
                    <span class="status-badge @(Model.EstActif ? "status-active" : "status-inactive")">
                        @(Model.EstActif ? "Actif" : "Inactif")
                    </span>
                </div>
                <div class="info-card-body">
                    <div class="info-row">
                        <label>Nom complet :</label>
                        <span>@Model.Prenom @Model.Nom</span>
                    </div>
                    <div class="info-row">
                        <label>Email :</label>
                        <span>@Model.Email</span>
                    </div>
                    <div class="info-row">
                        <label>Téléphone :</label>
                        <span>@(string.IsNullOrEmpty(Model.Telephone) ? "-" : Model.Telephone)</span>
                    </div>
                    @if (Model.DateNaissance.HasValue)
                    {
                        <div class="info-row">
                            <label>Date de naissance :</label>
                            <span>@Model.DateNaissance.Value.ToString("dd/MM/yyyy")</span>
                        </div>
                    }
                    <div class="info-row">
                        <label>Date d'inscription :</label>
                        <span>@Model.DateCreation.ToString("dd/MM/yyyy HH:mm")</span>
                    </div>
                    <div class="info-row">
                        <label>Dernière connexion :</label>
                        <span>@(Model.DerniereConnexion?.ToString("dd/MM/yyyy HH:mm") ?? "Jamais")</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistics Card -->
        <div class="col-md-4 mb-4">
            <div class="stat-card-small">
                <h4>Statistiques</h4>
                <div class="stat-item">
                    <span class="stat-label">Commandes</span>
                    <span class="stat-value">@Model.OrderCount</span>
                </div>
                <div class="stat-item">
                    <span class="stat-label">Total dépensé</span>
                    <span class="stat-value">@(((decimal)Model.TotalSpent).ToString("F2")) MAD</span>
                </div>
            </div>

            <!-- Actions Card -->
            <div class="action-card">
                <h4>Actions</h4>
                <button type="button" class="btn-action-full @(Model.EstActif ? "btn-deactivate" : "btn-activate")" 
                        data-user-id="@Model.ClientId" 
                        data-current-status="@Model.EstActif">
                    @(Model.EstActif ? "Désactiver le compte" : "Activer le compte")
                </button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    @Html.AntiForgeryToken()
    <script>
        document.querySelector('.btn-action-full').addEventListener('click', function() {
            var userId = this.getAttribute('data-user-id');
            var currentStatus = this.getAttribute('data-current-status') === 'True';
            var newStatus = !currentStatus;
            
            if (confirm('Êtes-vous sûr de vouloir ' + (newStatus ? 'activer' : 'désactiver') + ' ce compte ?')) {
                var token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                var formData = new FormData();
                formData.append('userId', userId);
                formData.append('isActive', newStatus);
                formData.append('__RequestVerificationToken', token);
                
                fetch('@Url.Action("ToggleUserStatus", "Admin")', {
                    method: 'POST',
                    body: formData
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Erreur: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Une erreur est survenue');
                });
            }
        });
    </script>
}

