@model List<E_Commerce_Cooperatives.Models.ECommerceDbContext.CategorieStats>

@{
    ViewBag.Title = "Gestion des Catégories";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
    
    var totalCategories = Model.Count;
}

<div class="admin-page">
    <!-- Top Header with Search -->
    <div class="admin-page-header-row">
        <div class="search-form">
            <div class="search-input-wrapper">
                <i class="fas fa-search search-icon"></i>
                <input type="text" id="searchInput" placeholder="Rechercher..." class="search-input-field" autocomplete="off" />
            </div>
        </div>
        <div class="header-notifications">
           <!-- Placeholder for visual consistency with image -->
        </div>
    </div>

    <!-- Page Title Section -->
    <div class="page-title-section">
        <h1 class="main-title">Gestion des Catégories</h1>
        <p class="sub-title">Organisez vos produits par catégories</p>
    </div>

    <!-- Controls Row -->
    <div class="categories-controls">
        <p class="categories-count"><span id="displayedCount">@totalCategories</span> catégories au total</p>
        <a href="@Url.Action("AjouterCategorie")" class="btn-primary-action">
            <i class="fas fa-plus"></i> Nouvelle catégorie
        </a>
    </div>

    <!-- Grid -->
    <div class="categories-grid" id="categoriesGrid">
        @foreach (var cat in Model)
        {
            <div class="category-card" 
                 data-name="@cat.Nom.ToLower()" 
                 data-description="@(cat.Description ?? "").ToLower()"
                 data-products="@cat.NombreProduits"
                 data-status="@(cat.EstActive ? "active" : "inactive")">
                <!-- Header Image/Icon -->
                <div class="category-card-header">
                    @if (!string.IsNullOrEmpty(cat.ImageUrl))
                    {
                        <img src="@Url.Content(cat.ImageUrl)" alt="@cat.Nom" class="category-image-real" />
                    }
                    else
                    {
                        <div class="category-folder-icon">
                            <i class="far fa-folder-open"></i>
                        </div>
                    }

                    <!-- Actions Floating in Header (Bottom Right) -->
                    <div class="card-actions">
                        <a href="@Url.Action("ModifierCategorie", new { id = cat.CategorieId })" class="btn-action-icon btn-edit-icon" title="Modifier">
                            <i class="fas fa-pen"></i>
                        </a>
                        <button onclick="toggleStatus(@cat.CategorieId)" class="btn-action-icon btn-delete-icon" title="@(cat.EstActive ? "Désactiver" : "Activer")">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>

                <!-- Body -->
                <div class="category-card-body">
                    <div class="card-title-row">
                        <h3 class="category-title">@cat.Nom</h3>
                        <span class="status-badge @(cat.EstActive ? "active" : "inactive")">
                            @(cat.EstActive ? "Active" : "Inactive")
                        </span>
                    </div>
                    
                    <p class="category-desc">
                        @(string.IsNullOrEmpty(cat.Description) ? "Aucune description" : (cat.Description.Length > 60 ? cat.Description.Substring(0, 60) + "..." : cat.Description))
                    </p>
                    
                    <div class="category-footer">
                        <span class="product-count">@cat.NombreProduits produits</span>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Message si aucun résultat -->
    <div id="noResultsMessage" style="display: none; text-align: center; padding: 60px 20px;">
        <i class="fas fa-search" style="font-size: 48px; color: #95A5A6; margin-bottom: 20px;"></i>
        <h3 style="color: #2D4C61; font-size: 20px; margin-bottom: 10px;">Aucune catégorie trouvée</h3>
        <p style="color: #7F8C8D;">Essayez avec d'autres mots-clés</p>
    </div>
</div>

@section scripts {
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Sélection des éléments
        const searchInput = document.getElementById('searchInput');
        const cards = document.querySelectorAll('.category-card');
        const noResults = document.getElementById('noResultsMessage');
        const countDisplay = document.getElementById('displayedCount');
        const totalCount = cards.length;

        // Fonction de recherche temps réel
        searchInput.addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase().trim();
            let visibleCount = 0;

            cards.forEach(card => {
                // Récupération des données data-* (plus rapide que le DOM)
                const name = card.dataset.name || '';
                const desc = card.dataset.description || '';

                if (name.includes(searchTerm) || desc.includes(searchTerm)) {
                    card.style.display = ""; // Afficher
                    // Animation d'apparition si c'était caché
                    if(card.style.display !== "none") {
                        card.style.animation = "fadeInCard 0.3s ease-in";
                    }
                    visibleCount++;
                } else {
                    card.style.display = "none"; // Masquer
                }
            });

            // Mise à jour du compteur
            if (countDisplay) {
                countDisplay.textContent = visibleCount;
            }

            // Gestion du message "Aucun résultat"
            if (visibleCount === 0) {
                noResults.style.display = "block";
            } else {
                noResults.style.display = "none";
            }
        });
    });

    function toggleStatus(id) {
        if (confirm("Voulez-vous vraiment changer le statut de cette catégorie ?")) {
            fetch('@Url.Action("ToggleCategorieStatus", "Admin")', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ id: id })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert("Erreur lors de la mise à jour du statut.");
                }
            });
        }
    }
</script>
}

