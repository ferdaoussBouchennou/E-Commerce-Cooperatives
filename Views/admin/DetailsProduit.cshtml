@model E_Commerce_Cooperatives.Models.Produit

@{
    ViewBag.Title = "Détails du produit";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<div class="admin-page">
    <div class="modal-form-container">
        <div class="modal-form-header">
            <h1 class="admin-page-title"><span class="title-accent"></span>Détails du produit</h1>
            <a href="@Url.Action("Produits")" class="modal-close-btn">&times;</a>
        </div>

        <div class="premium-details">
            <div class="details-row main-info">
                <div class="product-visual">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Url.Content(Model.ImageUrl)" alt="@Model.Nom" class="details-img" />
                    }
                    else
                    {
                        <div class="details-img-placeholder">
                            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="#CCC" viewBox="0 0 16 16">
                                <path d="M6.002 5.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z" />
                                <path d="M2.002 1a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2h-12zm12 1a1 1 0 0 1 1 1v6.5l-3.777-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062L1.002 12V3a1 1 0 0 1 1-1h12z" />
                            </svg>
                        </div>
                    }
                </div>
                <div class="product-main-text">
                    <h2 class="details-product-name">@Model.Nom</h2>
                    <div class="details-badges">
                        @if (Model.EstEnVedette)
                        {
                            <span class="badge badge-vedette">Vedette</span>
                        }
                        @if (Model.EstNouveau)
                        {
                            <span class="badge badge-nouveau">Nouveau</span>
                        }
                        <span class="badge badge-status @(Model.EstDisponible ? "badge-dispo" : "badge-indisponible")">
                            @(Model.EstDisponible ? "Disponible" : "Indisponible")
                        </span>
                    </div>
                    <div class="details-price">@Model.Prix.ToString("0.00") MAD</div>
                </div>
            </div>

            <hr class="details-divider" />

            <div class="details-grid">
                <div class="details-item">
                    <label>Catégorie</label>
                    <div class="details-value">@(Model.Categorie != null ? Model.Categorie.Nom : "Non définie")</div>
                </div>
                <div class="details-item">
                    <label>Coopérative</label>
                    <div class="details-value">@(Model.Cooperative != null ? Model.Cooperative.Nom : "Non définie")</div>
                </div>
                <div class="details-item">
                    <label>Stock Total</label>
                    <div class="details-value">@Model.StockTotal unités</div>
                </div>
                <div class="details-item">
                    <label>Seuil d'alerte</label>
                    <div class="details-value">@Model.SeuilAlerte unités</div>
                </div>
                <div class="details-item">
                    <label>Date de création</label>
                    <div class="details-value">@Model.DateCreation.ToString("dd/MM/yyyy HH:mm")</div>
                </div>
                <div class="details-item">
                    <label>Dernière modification</label>
                    <div class="details-value">@(Model.DateModification.HasValue ? Model.DateModification.Value.ToString("dd/MM/yyyy HH:mm") : "Jamais")</div>
                </div>
            </div>

            <div class="details-description">
                <label>Description</label>
                <div class="details-value description-text">
                    @(string.IsNullOrEmpty(Model.Description) ? "Aucune description fournie." : Model.Description)
                </div>
            </div>

            <div class="modal-form-footer">
                <a href="@Url.Action("Produits")" class="btn-secondary-action">Retour à la liste</a>
                <a href="@Url.Action("ModifierProduit", new { id = Model.ProduitId })" class="btn-primary-action-save">Modifier le produit</a>
            </div>
        </div>
    </div>
</div>

<style>
    .modal-form-container {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        padding: 32px;
        max-width: 1100px !important;
        width: 95% !important;
        margin: 20px auto;
        position: relative;
    }

    .modal-form-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 32px;
    }

    .title-accent {
        display: inline-block;
        width: 4px;
        height: 24px;
        background: #FFD700;
        margin-right: 12px;
        vertical-align: middle;
        border-radius: 2px;
    }

    .modal-close-btn {
        font-size: 28px;
        color: #6D6C6A;
        text-decoration: none;
        line-height: 1;
    }

    .main-info {
        display: flex;
        gap: 32px;
        align-items: center;
        margin-bottom: 32px;
    }

    .product-visual {
        width: 150px;
        height: 150px;
        border-radius: 12px;
        overflow: hidden;
        border: 1px solid #EEE;
        background: #F8F9FA;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .details-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .details-product-name {
        font-size: 32px;
        color: #305C7D;
        margin: 0 0 12px 0;
        font-weight: 700;
    }

    .details-badges {
        display: flex;
        gap: 8px;
        margin-bottom: 16px;
    }

    .details-price {
        font-size: 24px;
        font-weight: 700;
        color: #C06C50;
    }

    .details-divider {
        border: none;
        border-top: 1px solid #EAEAEA;
        margin: 32px 0;
    }

    .details-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 24px;
        margin-bottom: 32px;
    }

    .details-item label {
        display: block;
        font-size: 13px;
        text-transform: uppercase;
        color: #6D6C6A;
        margin-bottom: 6px;
        letter-spacing: 0.5px;
        font-weight: 600;
    }

    .details-value {
        font-size: 16px;
        color: #333;
        font-weight: 500;
    }

    .description-text {
        line-height: 1.6;
        color: #555;
        white-space: pre-line;
    }

    .details-description {
        margin-top: 32px;
        background: #F8F9FA;
        padding: 20px;
        border-radius: 8px;
    }

    .modal-form-footer {
        display: flex;
        justify-content: flex-end;
        gap: 16px;
        margin-top: 40px;
    }

    .btn-secondary-action {
        padding: 12px 32px;
        border: 2px solid #305C7D;
        background: white;
        color: #305C7D;
        border-radius: 8px;
        font-weight: 700;
        text-decoration: none;
        transition: all 0.2s;
    }

    .btn-secondary-action:hover {
        background: #F8F9FA;
    }

    .btn-primary-action-save {
        padding: 12px 32px;
        border: none;
        background: #305C7D;
        color: white;
        border-radius: 8px;
        font-weight: 700;
        text-decoration: none;
        transition: all 0.2s;
    }

    .btn-primary-action-save:hover {
        background: #254a64;
    }
</style>
