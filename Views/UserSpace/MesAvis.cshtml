@model List<E_Commerce_Cooperatives.Models.AvisProduit>
@{
    ViewBag.Title = "Mes Avis";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_Header")

<main style="background-color: #F5F3EF; min-height: 100vh; padding-top: 2rem; padding-bottom: 4rem;">
    <div class="container">
        <div class="row">
            @Html.Partial("_UserSidebar")

            <div class="col-md-9">
                <div class="card shadow-sm" style="border-radius: 16px; border: none;">
                    <div class="card-body p-4">
                        <!-- Header -->
                        <div class="d-flex justify-content-between align-items-center mb-4 pb-3 border-bottom">
                            <h2 class="fw-bold mb-0" style="color: #305C7D;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor"
                                    class="bi bi-star me-2" viewBox="0 0 16 16">
                                    <path
                                        d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z" />
                                </svg>
                                Mes Avis
                            </h2>
                            <span class="badge"
                                style="background-color: #E8DCC2; color: #305C7D; font-size: 1rem; padding: 0.5rem 1rem;">
                                @Model.Count avis
                            </span>
                        </div>

                        <!-- Success/Error Messages -->
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <strong>Succès!</strong> @TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <strong>Erreur!</strong> @TempData["ErrorMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <!-- Reviews List -->
                        @if (Model.Count == 0)
                        {
                            <div class="text-center py-5">
                                <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="#d1d5db"
                                    class="bi bi-star mb-3" viewBox="0 0 16 16">
                                    <path
                                        d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z" />
                                </svg>
                                <h5 class="text-muted">Vous n'avez pas encore laissé d'avis</h5>
                                <p class="text-muted mb-4">Partagez votre expérience sur les produits que vous avez reçus!
                                </p>
                                <a href="@Url.Action("MesCommandes", "Checkout")" class="btn btn-lg"
                                    style="background-color: #305C7D; color: white; border-radius: 8px;">
                                    Voir mes commandes
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="row g-4">
                                @foreach (var avis in Model)
                                {
                                    <div class="col-12">
                                        <div class="card border-0 shadow-sm"
                                            style="border-radius: 12px; background-color: #FAFAFA;">
                                            <div class="card-body p-4">
                                                <div class="row">
                                                    <!-- Product Image -->
                                                    <div class="col-md-2 col-3">
                                                        <a
                                                            href="@Url.Action("Details", "Produit", new { id = avis.ProduitId })">
                                                            <img src="@(string.IsNullOrEmpty(avis.ProduitImage) ? "/Content/images/no-image.png" : avis.ProduitImage)"
                                                                alt="@avis.ProduitNom" class="img-fluid rounded"
                                                                style="object-fit: cover; width: 100%; aspect-ratio: 1;">
                                                        </a>
                                                    </div>

                                                    <!-- Review Content -->
                                                    <div class="col-md-10 col-9">
                                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                                            <div>
                                                                <h5 class="fw-bold mb-1" style="color: #305C7D;">
                                                                    <a href="@Url.Action("Details", "Produit", new { id = avis.ProduitId })"
                                                                        class="text-decoration-none" style="color: #305C7D;">
                                                                        @avis.ProduitNom
                                                                    </a>
                                                                </h5>
                                                                <div class="mb-2">
                                                                    @for (int i = 1; i <= 5; i++)
                                                                    {
                                                                        if (i <= avis.Note)
                                                                        {
                                                                            <svg xmlns="http://www.w3.org/2000/svg" width="18"
                                                                                height="18" fill="#ffc107" viewBox="0 0 16 16">
                                                                                <path
                                                                                    d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                                                                            </svg>
                                                                        }
                                                                        else
                                                                        {
                                                                            <svg xmlns="http://www.w3.org/2000/svg" width="18"
                                                                                height="18" fill="#e0e0e0" viewBox="0 0 16 16">
                                                                                <path
                                                                                    d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                                                                            </svg>
                                                                        }
                                                                    }
                                                                </div>
                                                            </div>
                                                            <small class="text-muted">
                                                                @avis.DateAvis.ToString("dd MMMM yyyy", new
                                                        System.Globalization.CultureInfo("fr-FR"))
                                                            </small>
                                                        </div>

                                                        @if (!string.IsNullOrEmpty(avis.Commentaire))
                                                        {
                                                            <p class="text-muted mb-3" style="font-size: 0.95rem;">
                                                                @avis.Commentaire
                                                            </p>
                                                        }

                                                        <div class="d-flex gap-2">
                                                            <a href="@Url.Action("Details", "Produit", new { id = avis.ProduitId })"
                                                                class="btn btn-sm"
                                                                style="background-color: #E8DCC2; color: #305C7D; border: none;">
                                                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14"
                                                                    fill="currentColor" class="bi bi-eye me-1"
                                                                    viewBox="0 0 16 16">
                                                                    <path
                                                                        d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z" />
                                                                    <path
                                                                        d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z" />
                                                                </svg>
                                                                Voir le produit
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@Html.Partial("_Footer")
