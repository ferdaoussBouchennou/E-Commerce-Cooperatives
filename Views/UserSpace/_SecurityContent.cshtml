@model E_Commerce_Cooperatives.Models.ViewModels.ChangePasswordViewModel

<div class="card shadow-sm" style="border-radius: 12px; border: none;">
    <div class="card-body p-4">
        <div class="alert alert-info" style="border-radius: 8px; background-color: #e7f3ff; border-color: #305C7D; color: #305C7D;">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 16 16" style="margin-right: 8px;">
                <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451.081.082.381 1.29-.59z"/>
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
            </svg>
            <strong>Conseil de sécurité :</strong> Utilisez un mot de passe fort contenant au moins 8 caractères avec des lettres majuscules, minuscules, chiffres et symboles.
        </div>

        @using (Html.BeginForm("ChangePassword", "UserSpace", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group mb-3">
                @Html.LabelFor(m => m.CurrentPassword, new { @class = "form-label fw-bold", style = "color: #305C7D;" })
                @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control", required = "required", placeholder = "Entrez votre mot de passe actuel", style = "border-radius: 8px; padding: 0.75rem;" })
                @Html.ValidationMessageFor(m => m.CurrentPassword, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(m => m.NewPassword, new { @class = "form-label fw-bold", style = "color: #305C7D;" })
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", required = "required", placeholder = "Entrez votre nouveau mot de passe", minlength = "6", style = "border-radius: 8px; padding: 0.75rem;" })
                @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                <small class="form-text text-muted">Le mot de passe doit contenir au moins 6 caractères.</small>
            </div>

            <div class="form-group mb-4">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label fw-bold", style = "color: #305C7D;" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", required = "required", placeholder = "Confirmez votre nouveau mot de passe", minlength = "6", style = "border-radius: 8px; padding: 0.75rem;" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            </div>

            <div class="d-flex justify-content-end mt-4">
                <button type="submit" class="btn" style="background-color: #305C7D; color: white; padding: 0.75rem 2rem; border-radius: 8px; font-weight: 600;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 16 16" style="margin-right: 8px;">
                        <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
                    </svg>
                    Modifier le mot de passe
                </button>
            </div>
        }
    </div>
</div>

<script>
    (function () {
        'use strict';
        var forms = document.querySelectorAll('.needs-validation');
        Array.prototype.slice.call(forms).forEach(function (form) {
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();
</script>

