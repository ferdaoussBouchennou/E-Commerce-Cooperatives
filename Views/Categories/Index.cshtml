@using E_Commerce_Cooperatives.Models
@{
    ViewBag.Title = "Catégories";
    var categories = ViewBag.Categories as List<Categorie>;
    var productCountByCategory = ViewBag.ProductCountByCategory as Dictionary<int, int>;
    var popularProductsByCategory = ViewBag.PopularProductsByCategory as Dictionary<int, List<Produit>>;
}

@Html.Partial("_Header")

<!-- Hero Section with Dark Teal Background -->
<section class="categories-hero-dark text-white py-5">
    <div class="container text-center">
        <!-- Badge -->
        <div class="mb-4">
            <span class="badge category-badge-beige px-4 py-2 rounded-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-stars me-1" viewBox="0 0 16 16">
                    <path d="M7.657 6.247c.11-.33.576-.33.686 0l.645 1.937a2.89 2.89 0 0 0 1.829 1.828l1.936.645c.33.11.33.576 0 .686l-1.937.645a2.89 2.89 0 0 0-1.828 1.829l-.645 1.936a.361.361 0 0 1-.686 0l-.645-1.937a2.89 2.89 0 0 0-1.828-1.828l-1.937-.645a.361.361 0 0 1 0-.686l1.937-.645a2.89 2.89 0 0 0 1.828-1.828zM3.794 1.148a.217.217 0 0 1 .412 0l.387 1.162c.173.518.579.924 1.097 1.097l1.162.387a.217.217 0 0 1 0 .412l-1.162.387A1.73 1.73 0 0 0 4.593 5.69l-.387 1.162a.217.217 0 0 1-.412 0L3.407 5.69A1.73 1.73 0 0 0 2.31 4.593l-1.162-.387a.217.217 0 0 1 0-.412l1.162-.387A1.73 1.73 0 0 0 3.407 2.31zM10.863.099a.145.145 0 0 1 .274 0l.258.774c.115.346.386.617.732.732l.774.258a.145.145 0 0 1 0 .274l-.774.258a1.16 1.16 0 0 0-.732.732l-.258.774a.145.145 0 0 1-.274 0l-.258-.774a1.16 1.16 0 0 0-.732-.732L9.1 2.137a.145.145 0 0 1 0-.274l.774-.258c.346-.115.617-.386.732-.732z"/>
                </svg>
                @ViewBag.TotalCategories catégories disponibles
            </span>
        </div>

        <!-- Title -->
        <h1 class="display-3 fw-bold mb-3" style="color: var(--azul-profundo);">Explorez nos catégories</h1>
        <p class="lead mb-5 mx-auto" style="max-width: 700px; color: var(--text-muted);">
            Découvrez notre sélection de produits artisanaux marocains, organisés par catégorie pour faciliter votre navigation.
        </p>

        <!-- Statistics -->
        <div class="row g-4 justify-content-center mb-5">
            <div class="col-4 col-md-2">
                <div class="stat-number">@ViewBag.TotalCategories</div>
                <div class="stat-label">Catégories</div>
            </div>
            <div class="col-4 col-md-2">
                <div class="stat-number">@ViewBag.TotalProducts</div>
                <div class="stat-label">Produits</div>
            </div>
            <div class="col-4 col-md-2">
                <div class="stat-number">100%</div>
                <div class="stat-label">Artisanal</div>
            </div>
        </div>

        <!-- Search Bar -->
        <div class="search-container mx-auto" style="max-width: 600px;">
            <div class="input-group input-group-lg">
                <span class="input-group-text category-search-bg">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-search text-muted" viewBox="0 0 16 16">
                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
                    </svg>
                </span>
                <input type="text" id="categorySearch" class="form-control category-search-bg shadow-none" placeholder="Rechercher une catégorie..." style="font-size: 1rem; border-left: none;">
            </div>
        </div>
    </div>
</section>

<!-- Categories Grid Header -->
<div class="bg-light border-bottom py-3">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <div class="text-muted">
                <span id="categoryCount">@ViewBag.TotalCategories</span> catégories trouvées
            </div>
            <div class="d-flex gap-2">
                <button class="view-toggle-btn active" data-view="grid" title="Grille">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-grid-3x3-gap" viewBox="0 0 16 16">
                        <path d="M4 2v2H2V2zm1 12v-2a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v2a1 1 0 0 0 1 1h2a1 1 0 0 0 1-1m0-5V7a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v2a1 1 0 0 0 1 1h2a1 1 0 0 0 1-1m0-5V2a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v2a1 1 0 0 0 1 1h2a1 1 0 0 0 1-1m5 10v-2a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1v2a1 1 0 0 0 1 1h2a1 1 0 0 0 1-1m0-5V7a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1v2a1 1 0 0 0 1 1h2a1 1 0 0 0 1-1m0-5V2a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1v2a1 1 0 0 0 1 1h2a1 1 0 0 0 1-1M9 2v2H7V2zm5 0v2h-2V2zM4 7v2H2V7zm5 0v2H7V7zm5 0h-2v2h2zM4 12v2H2v-2zm5 0v2H7v-2zm5 0v2h-2v-2zM12 1a1 1 0 0 0-1 1v2a1 1 0 0 0 1 1h2a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zm-1 6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v2a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1zm1 4a1 1 0 0 0-1 1v2a1 1 0 0 0 1 1h2a1 1 0 0 0 1-1v-2a1 1 0 0 0-1-1z"/>
                    </svg>
                </button>
                <button class="view-toggle-btn" data-view="list" title="Liste">
