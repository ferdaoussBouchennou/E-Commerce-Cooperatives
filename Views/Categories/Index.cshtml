@Html.Partial("_Footer")

@section scripts {
    <script>
        $(document).ready(function() {
            // Category Search
            $("#categorySearch").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                var count = 0;
                
                // Filter both grid and list views
                $(".category-item, .category-item-list").filter(function() {
                    var match = $(this).data("name").indexOf(value) > -1;
                    $(this).toggle(match);
                    if (match) count++;
                });
                
                $("#categoryCount").text(count);
            });

            // View Toggle
            $(".view-toggle-btn").on("click", function() {
                var viewType = $(this).data("view");
                $(".view-toggle-btn").removeClass("active");
                $(this).addClass("active");
                
                if (viewType === "list") {
                    $("#categoriesGrid").addClass("d-none");
                    $("#categoriesList").removeClass("d-none");
                } else {
                    $("#categoriesGrid").removeClass("d-none");
                    $("#categoriesList").addClass("d-none");
                }
            });

            // Fade-in animation on scroll
            const observerOptions = {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            };

            const observer = new IntersectionObserver(function(entries) {
                entries.forEach(function(entry) {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                        observer.unobserve(entry.target);
                    }
                });
            }, observerOptions);

            document.querySelectorAll('.fade-in').forEach(function(element) {
                observer.observe(element);
            });

            // Popular Categories Pagination
            var popularItems = $("#popularCategoriesRow > div");
            var itemsPerPage = 4;
            var numPages = Math.ceil(popularItems.length / itemsPerPage);
            var currentPage = 1;

            if (numPages > 1) {
                $("#popularPagination").removeClass("d-none");
                $("#totalPopularPages").text(numPages);
                showPopularPage(1);
            }

            function showPopularPage(page) {
                currentPage = page;
                var start = (page - 1) * itemsPerPage;
                var end = start + itemsPerPage;

                popularItems.addClass("d-none");
                popularItems.slice(start, end).removeClass("d-none").hide().fadeIn(400);

                $("#currentPopularPage").text(page);
                $("#prevPopular").prop("disabled", page === 1).css("opacity", page === 1 ? "0.5" : "1");
                $("#nextPopular").prop("disabled", page === numPages).css("opacity", page === numPages ? "0.5" : "1");
            }

            $("#prevPopular").on("click", function() {
                if (currentPage > 1) showPopularPage(currentPage - 1);
            });

            $("#nextPopular").on("click", function() {
                if (currentPage < numPages) showPopularPage(currentPage + 1);
            });
        });
    </script>
}
