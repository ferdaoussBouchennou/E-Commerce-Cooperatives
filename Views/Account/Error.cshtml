@{
    ViewBag.Title = "Erreur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_Header")

<main style="min-height: 70vh; background-color: #F5F3EF; padding: 60px 0;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5 col-lg-4">
                <div class="card shadow-sm border-0 rounded-4" style="background-color: white;">
                    <div class="card-body p-4 text-center">
                        <div class="mb-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="#C06C50" viewBox="0 0 16 16">
                                <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                            </svg>
                        </div>
                        <h2 class="h4 fw-bold mb-3" style="color: #305C7D;">Erreur</h2>
                        @if (ViewBag.ErrorMessage != null)
                        {
                            <p class="text-muted mb-4">@ViewBag.ErrorMessage</p>
                        }
                        else
                        {
                            <p class="text-muted mb-4">Une erreur est survenue.</p>
                        }
                        <a href="@Url.Action("Login", "Account")" class="btn" style="background-color: #C06C50; color: white; border: none;">
                            Retour Ã  la connexion
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@Html.Partial("_Footer")

