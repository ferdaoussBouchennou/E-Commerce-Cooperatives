<!DOCTYPE html>
<html lang="fr">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CoopShop</title>
    <link rel="icon" type="image/png" href="@Url.Content("~/Content/images/logo-coop.png")" />
    <link rel="shortcut icon" type="image/png" href="@Url.Content("~/Content/images/logo-coop.png")" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- Hidden element to store authentication status -->
    <div id="user-authenticated" data-authenticated="@(ViewBag.IsAuthenticated != null && ViewBag.IsAuthenticated == true ? "true" : "false")" style="display: none;"></div>
    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/site")
    @RenderSection("scripts", required: false)
</body>
</html>
