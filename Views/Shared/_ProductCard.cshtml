@using E_Commerce_Cooperatives.Models
@using System.Linq
@model E_Commerce_Cooperatives.Models.Produit

<a href="@Url.Action("Details", "Produit", new { id = Model.ProduitId })" class="product-card text-decoration-none">
    <article class="bg-white rounded-3 overflow-hidden shadow-sm h-100">
        <!-- Image Container -->
        <div class="position-relative" style="aspect-ratio: 1/1; overflow: hidden;">
            @{
                var mainImage = Model.ImageUrl 
                                ?? Model.Images?.FirstOrDefault(img => img.EstPrincipale)?.UrlImage 
                                ?? Model.Images?.FirstOrDefault()?.UrlImage 
                                ?? "/Content/images/default-product.jpg";
            }
            <img src="@mainImage" alt="@Model.Nom" 
                 class="w-100 h-100 object-fit-cover product-image"
                 onerror="this.src='/Content/images/default-product.jpg';">
            
            <!-- Badges -->
            <div class="position-absolute top-0 start-0 p-3 d-flex flex-column gap-2">
            @if (Model.EstNouveau)
            {
                <span class="badge" style="background-color: #7D8453; color: white;">Nouveau</span>
            }
            @if (Model.EstEnVedette)
            {
                <span class="badge" style="background-color: #305C7D; color: white;">Vedette</span>
            }
            </div>

            <!-- Quick Actions -->
            <div class="position-absolute top-0 end-0 p-3 product-actions" style="opacity: 0; transition: opacity 0.3s; z-index: 10;">
                <button class="btn btn-light rounded-circle p-2 shadow-sm favori-toggle-btn" 
                        type="button" 
                        data-produit-id="@Model.ProduitId"
                        onclick="toggleFavori(event, @Model.ProduitId, this)"
                        title="Ajouter aux favoris">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart" viewBox="0 0 16 16">
                        <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z"/>
                    </svg>
                </button>
            </div>

            <!-- Add to Cart Overlay -->
            <div class="position-absolute bottom-0 start-0 end-0 p-3 product-cart-overlay" style="transform: translateY(100%); transition: transform 0.3s;">
                @{
                    var hasVariants = Model.Variantes != null && Model.Variantes.Any();
                }
                <button class="btn w-100 add-to-cart-btn" 
                        type="button" 
                        data-produit-id="@Model.ProduitId" 
                        data-has-variants="@(hasVariants ? "1" : "0")"
                        style="background-color: #C06C50; color: white; border: none;">
                    @if (hasVariants)
                    {
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye me-2" viewBox="0 0 16 16">
                            <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
                            <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                        </svg>
                        <text>Choisir les options</text>
                    }
                    else
                    {
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart-plus me-2" viewBox="0 0 16 16">
                            <path d="M9 5.5a.5.5 0 0 0-1 0V7H6.5a.5.5 0 0 0 0 1H8v1.5a.5.5 0 0 0 1 0V8h1.5a.5.5 0 0 0 0-1H9V5.5z"/>
                            <path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zm3.915 10L3.102 4h10.796l-1.313 7h-8.17zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
                        </svg>
                        <text>Ajouter au panier</text>
                    }
                </button>
            </div>
        </div>

        <!-- Content -->
        <div class="p-4">
            <!-- Category -->
            <p class="text-muted small text-uppercase mb-1" style="letter-spacing: 0.5px;">
                @(Model.Categorie?.Nom ?? "Non catégorisé")
            </p>

            <!-- Title -->
            <h3 class="h5 fw-semibold text-dark mb-2 product-title" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                @Model.Nom
            </h3>

            <!-- Cooperative -->
            @if (Model.Cooperative != null)
            {
                <p class="text-muted small mb-3" style="display: -webkit-box; -webkit-line-clamp: 1; -webkit-box-orient: vertical; overflow: hidden;">
                    @Model.Cooperative.Nom
                </p>
            }

            <!-- Rating -->
            @if (Model.NombreAvis > 0)
            {
                <div class="d-flex align-items-center gap-1 mb-3">
                    <div class="d-flex">
                        @for (int i = 0; i < 5; i++)
                        {
                            if (i < Math.Floor(Model.NoteMoyenne))
                            {
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="#ffc107" viewBox="0 0 16 16">
                                    <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                                </svg>
                            }
                            else
                            {
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="#e0e0e0" viewBox="0 0 16 16">
                                    <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z"/>
                                </svg>
                            }
                        }
                    </div>
                    <span class="text-muted small ms-1">(@Model.NombreAvis)</span>
                </div>
            }

            <!-- Price & Stock -->
            <div class="d-flex align-items-end justify-content-between">
                <div>
                    <span class="h5 fw-bold text-dark">
                        @Model.PrixTTC.ToString("F2") MAD
                    </span>
                    @if (Model.Variantes != null && Model.Variantes.Any())
                    {
                        <span class="text-muted small ms-1">et plus</span>
                    }
                </div>
                @if (Model.StockTotal <= Model.SeuilAlerte && Model.StockTotal > 0)
                {
                    <span class="badge bg-warning text-dark small">Stock limité</span>
                }
            </div>
        </div>
    </article>
</a>

